    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />
  <link rel="stylesheet" href="css/style.css">
  <link href="/css/cart.css" rel="stylesheet">
  <link href="/css/product.css" rel="stylesheet">
  <link href="/css/admin/adminProduct.css" rel="stylesheet">
  <link href="/css/feedback/form.css" rel="stylesheet">

    <title>Pralshar Bio Products Pvt. Ltd.</title>
    <link rel="icon" type="image/x-icon" href="/img/favicon.ico">
</head>
<body>
    <nav class="navbar bg-success">
        <ul class="nav">
            <a class="navbar-brand" href="/home">
              <img src="/img/logo.jpg" class="rounded float-left" alt="" width="178" height="49">
            </a>
        </ul>
        <ul class="nav ml-auto">
            <li class="navbar-brand main-link">
                <a class="nav-link text-dark " href="/products" >
                    <i class="fas fa-regular fa-box-archive"></i> Products</a>
            </li>
            <li class="navbar-brand main-link">
                <a class="nav-link text-dark" href="/abouts" >
                    <i class="fas fa-regular fa-info-circle"></i> About</a>
            </li>
            <li class="navbar-brand main-link">
                <% if (login){ %>
                    <!-- Example single danger button -->
                    <div class="btn-group drop">
                      <a class="dropdown btn btn-success text-dark nav-link" href="/logout">
                        <i class="fas fa-regular fa-right-to-bracket"></i> Logout</a>
                      <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="visually-hidden">Toggle Dropdown</span>
                      </button>
                      <ul class="dropdown-menu text-dark">
                        <li><a class="dropdown-item" href="/account">My Account</a></li>
                        <li><a class="dropdown-item" href="/feedback">Feedback</a></li>
                        <li><a class="dropdown-item" href="/contact">Contact Us</a></li>
                      </ul>
                    </div>
                  <!-- <a class="nav-link text-dark" href="/logout">
                    <i class="fas fa-regular fa-right-to-bracket"></i> Logout </a> -->
                   <% } else {%> 
                    <a class="nav-link text-dark" href="/login">
                      <i class="fas fa-regular fa-right-to-bracket"></i> Login</a>
                   <%} %>
            </li>
          </ul>              
    </nav>

    <div class="container">
        <div class="head text-center">
          <h2><i class="fas fa-solid fa-comments"></i> Feedbacks</h2>
          <p class="date text-muted"></p>
        </div>

    <section class="container content-section cards">
        <div class="display-items">
            <div class="row ">
            <% feedbacks.forEach(function(feedback){ %>
                <form class="col-4" action="/feedback/<%= feedback.id %>?_method=DELETE" method="post">
                    <div >
                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-light fa-circle-user"></i>  <%= feedback.name %> </h5>
                            <h6 class="card-subtitle mb-2 text-muted">For <%= feedback.feedbackFor %> </h6>
                            <p class="card-text"><%= feedback.message %> </p>
                            <button type="submit" class="btn btn-danger del"><i class="fas fa-trash"></i></button>
                            <!-- <a href="#" class="card-link">Card link</a>
                            <a href="#" class="card-link">Another link</a> -->
                            </div>
                        </div>
                    </div>
                </form>
            <% }) %>
            </div>
        </div>
    </section>
    





