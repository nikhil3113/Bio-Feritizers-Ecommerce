  <title>Pralshar Bio Products Pvt. Ltd.</title>
  <link rel="icon" type="image/x-icon" href="/img/favicon.ico">
</head>
<body>
    <nav class="navbar bg-success">
        <ul class="nav">
            <a class="navbar-brand" href="/">
              <img src="/img/logo.jpg" class="rounded float-left" alt="" width="178" height="49">
            </a>
        </ul>
        <ul class="nav ml-auto">
            <li class="navbar-brand main-link">
                <a class="nav-link text-dark " href="/product" >
                    <i class="fa fa-archive"></i> Products</a>
            </li>
            <li class="navbar-brand main-link">
                <a class="nav-link text-dark " href="/about" >
                    <i class="fas fa-regular fa-info-circle"></i> About</a>
            </li>
            <li class="navbar-brand main-link">
                <% if (login){ %>
                    <!-- Example single danger button -->
                    <div class="btn-group drop">
                      <a class="dropdown btn btn-success text-dark nav-link" href="/logout">
                        <i class="fas fa-regular fa-right-to-bracket"></i> Logout</a>
                      <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="visually-hidden">Toggle Dropdown</span>
                      </button>
                      <ul class="dropdown-menu text-dark">
                        <li><a class="dropdown-item" href="/account">My Account</a></li>
                        <li><a class="dropdown-item" href="/contact">Contact Support</a></li>
                      </ul>
                    </div>
                  <!-- <a class="nav-link text-dark" href="/logout">
                    <i class="fas fa-regular fa-right-to-bracket"></i> Logout </a> -->
                   <% } else {%> 
                    <a class="nav-link text-dark" href="/login">
                      <i class="fas fa-regular fa-right-to-bracket"></i> Login</a>
                   <%} %>
            </li>
          </ul>              
    </nav>

    <div class="container main">
        <div class="row m-5 no-gutters shadow-lg">
            <div class="col-md-6 d-none d-md-block">
                <!-- <img src="/img/contact.png" width="600"
                    class="img-fluid contact"  /> -->
                    <iframe class="contact" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d59601.01901328798!2d75.575423!3d20.990084!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bd90fa4a1eab90f%3A0x37f67bd21bff0a3c!2sJalgaon%2C%20Maharashtra!5e0!3m2!1sen!2sin!4v1666957011819!5m2!1sen!2sin" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div> 
            <div class="col-md-6 bg-white p-5 login-main">
                <div class="login-pages">
                    <h3 class="pb-3 text-center"><i class="fas fa-regular fa-address-book"></i> Contact Us</h3>
                    <div class="form-style">
                        <form action="/auth/contact" method="post">
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fas fa-light fa-user"></i> </span>
                                </div>
                                <input name="name" class="form-control" value="<%= name %> " placeholder="Your Name" type="text" required="true">
                            </div> 
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fas fa-solid fa-address-card"></i> </span>
                                </div>
                                <textarea class="form-control" name="address" placeholder="Address"><%= address %> </textarea>
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-solid fa-phone"></i> </span>
                                </div>
                                <input class="form-control" name="phone" value="<%= phone %> " placeholder="Mobile" type="tel" maxlength="10" required="true">
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fas fa-solid fa-envelope"></i> </span>
                                </div>
                                <input class="form-control" name="email" value="<%= email %> " placeholder="Email" type="email" required="true">
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fas fa-solid fa-mail-forward"></i> </span>
                                </div>
                                <textarea class="form-control" name="message" placeholder="Message"></textarea>
                            </div>                   
                            <div class="form-group">
                                <button type="submit" class="btn btn-success btn-block"> Submit  </button>
                            </div>     
                        </form>
                        <!-- <div class="sideline">OR</div>
                        <div>
                            <button type="submit" class="btn btn-primary w-100 font-weight-bold mt-2"><i class="fa fa-facebook"
                                    aria-hidden="true"></i> Login With Facebook</button>
                        </div> -->
                        <!-- <div class="pt-4 text-center">
                            Get Members Benefit. <a href="#">Sign Up</a>
                        </div> -->
                    </div>
                </div>
            </div>
            
        </div>
        
    </div>
    <script src="js/jquery.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    
</body>
</html>