</head>
<body>
    <nav class="navbar bg-success">
        <ul class="nav">
            <a class="navbar-brand" href="/">
              <img src="/img/logo.jpg" class="rounded float-left" alt="" width="178" height="49">
            </a>
        </ul>
        <ul class="nav ml-auto">
            <li class="navbar-brand main-link">
                <a class="nav-link text-dark " href="/product" >
                    <i class="fa fa-archive"></i> Products</a>
            </li>
            <li class="navbar-brand main-link">
                <a class="nav-link text-dark " href="/about" >
                    <i class="fas fa-regular fa-info-circle"></i> About</a>
            </li>
            <li class="navbar-brand main-link">
                <a class="nav-link text-dark" href="/login" data-bs-toggle="modal" data-bs-target="#login-modal" >
                    <i class="fa fa-sign-in-alt"></i> Login</a>
            </li>
          </ul>              
    </nav>

    <div class="container shadow-lg p-3 mb-5 bg-white rounded main">
      <div class="row">
        <div class="col-6">
          <img src="/img/editProduct.png" width="650px" alt="img">
        </div>
          <div class="form-style col-6">
              <form action="/auth/product" method="post">
                  <div class="form-group input-group">
                      <div class="input-group-prepend">
                          <span class="input-group-text"> <i class="fas fa-sharp fa-solid fa-font"></i> </span>
                      </div>
                      <input name="name"  class="form-control" placeholder="Product name" type="text"  required="true">
                  </div> 
                  <div class="form-group input-group">
                      <div class="input-group-prepend">
                          <span class="input-group-text"> <i class="fas fa-regular fa-money-bill"></i> </span>
                      </div>
                      <!-- <input name="ad" class="form-control" placeholder="Email address" type="email" required="true"> -->
                      <input name="price"  class="form-control" placeholder="Product Price" type="number"  required="true">
                  </div> 
                  <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fas fa-solid fa-map-pin"></i> </span>
                    </div>
                    <input name="description" class="form-control" placeholder="Product description" type="text" required="true">
                </div>
                  <div class="form-group input-group">
                      <div class="input-group-prepend">
                          <span class="input-group-text"> <i class="fas fa-regular fa-image"></i> </span>
                      </div>
                      <input name="imgName" class="form-control" placeholder="ImageLink" type="text" required="true">
                  </div>                        
                  <div class="form-group">
                      <button type="submit" class="btn btn-success btn-block"> Add  </button>
                  </div>        
              </form>
          </div>
        </div>
    </div>


</body>
</html>